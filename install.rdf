    <em:translator>mozillazg</em:translator>
    <em:translator>Luana Di Muzio - BabelZilla</em:translator>
    <em:translator>Mikael Hiort af Ornäs</em:translator>
    <em:translator>RigoNet</em:translator>
    <em:translator>dehnli</em:translator>
